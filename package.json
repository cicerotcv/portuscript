{
  "name": "portuscript",
  "version": "0.0.1",
  "description": "Simplified Javascript interpreter with portuguese tokens.",
  "main": "index.js",
  "scripts": {
    "install-precommit": "husky install",
    "prettier:check": "prettier --check src",
    "prettier:write": "prettier --write src",
    "tests": "jest --verbose",
    "build": "tsup src/index.ts --format cjs,esm --dts"
  },
  "preommit.silent": false,
  "precommit": [
    "prettier:check",
    "test"
  ],
  "keywords": [
    "portuscript",
    "portuguese",
    "simplified javascript",
    "interpreter"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "prettier": "^2.8.7",
    "ts-jest": "^29.0.5",
    "tsup": "^6.7.0",
    "typescript": "^4.9.5"
  }
}